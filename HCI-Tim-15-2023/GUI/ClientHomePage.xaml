<Page x:Class="HCI_Tim_15_2023.GUI.ClientHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Tim_15_2023.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientHomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Click="OpenClientReservationCreatePage" Content="Book a travel" Foreground="White" Background="#555555" Margin="10"/>
        <Button Grid.Row="1" Click="OpenClientTravelViewPage" Content="All travels" Foreground="White" Background="#555555" Margin="10"/>
        <Button Grid.Row="2" Click="OpenClientBoughtTravelViewPage" Content="Travel history" Foreground="White" Background="#555555" Margin="10"/>
        <Button Grid.Row="3" Click="LogOut" Content="Log out" Background="#4286f4" Foreground="#ffffff" BorderBrush="#4286f4" Margin="10"/>
    </Grid>
</Page>
