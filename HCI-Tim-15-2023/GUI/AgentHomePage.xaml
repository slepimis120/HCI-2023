<Page x:Class="HCI_Tim_15_2023.GUI.AgentHomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HCI_Tim_15_2023.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AgentHomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="20*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Click="OpenRestaurantCRUD">Restaurants</Button>
        <Button Grid.Row="1" Click="OpenAttractionCRUD">Attractions</Button>
        <Button Grid.Row="2" Click="OpenAccomodationCRUD">Accommodations</Button>
        <Button Grid.Row="3" Click="OpenLocationCRUD">Travels</Button>
        <Button Grid.Row="4" Click="OpenAgentMonthlySoldTravelViewPage">Monthly sold travels</Button>
        <Button Grid.Row="5" Click="OpenAgentSoldIndividualTravelViewPage">Individual travel sales</Button>
        <Button Grid.Row="6" Click="LogOut">Log out</Button>
    </Grid>
</Page>
